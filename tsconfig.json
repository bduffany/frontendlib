{
  "include": ["src"],
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["dom"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src/",
    "strict": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "jsx": "react",
    "esModuleInterop": true
  }
}
